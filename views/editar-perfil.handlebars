<main class="contenedor">
    <form action="/editar-perfil" method="POST" class="default-form">
        <div class="campo">
            <label>Nombre</label>
            <input type="text" name="nombre" value="{{usuario.nombre}}" placeholder="Tu nombre" >
        </div>
        <div class="campo">
            <label>E-mail</label>
            <input type="email" name="email" value={{usuario.email}} placeholder="Tu e-mail" >
        </div>
        <div class="campo">
            <label>Password</label>
            <input type="password" name="password" placeholder="Tu password">
        </div>
        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Guardar cambios">
        </div>
    </form>
</main>